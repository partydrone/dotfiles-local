alias back="cd ~-"
alias h="history"
alias ll="ls -aFGl"
alias up="cd .."

# Redefine commands to add options
alias cp="cp -i"
alias df="df -h"
alias du="du -h"
alias mv="mv -i"
alias rm="rm -i"

# Docker Compose commands
alias dc="docker compose"
alias dcb="docker compose build"
alias dce="docker compose exec"
alias dcl="docker compose logs -f"
alias dcp="docker compose ps"
alias dcr="docker compose run --rm"
alias dcu="docker compose up -d"

# Mutagen Compose wrapper commands
alias mc="mutagen compose"
alias mcb="mutagen compose build"
alias mcd="mutagen compose down"
alias mce="mutagen compose exec"
alias mcl="mutagen compose logs -f"
alias mcp="mutagen compose ps"
alias mcu="mutagen compose up -d"

# Kubernetes commands
alias kc="kubectl"
alias kcc="kubectl create"
alias kcd="kubectl delete"
alias kcr="kubectl run"
alias kcs="kubectl set"
alias kcg="kubectl get"
alias kct="kubectl top"

# Docker Compose functions
dcd () {
  if (( $# == 0 ))
  then
    docker compose down --remove-orphans
  else
    dc stop $@
    dc rm $@
  fi
}

dcdu () {
  if (( $# == 0 ))
  then
    echo usage: dcdu service-name â€¦
  else
    dc stop $@
    dc rm $@
    dcu $@
  fi
}

dct () {
  if [[ $3 ]]
  then
    dcr $1 rake test TEST=$2 TESTOPTS="--name='$3'"
  else
    dcr $1 rake test TEST=$2
  fi
}
